/*Solution: Draw The Triengle 1.*/
/*
Enter your query here.
*/
SET @NUMBER = 21;
SELECT REPEAT('* ', @NUMBER := @NUMBER - 1)
    FROM information_schema.tables LIMIT 20;






/*Solution: Draw The Triengle 2.*/
/*
Enter your query here.
*/
SET @NUM = 0;
SELECT REPEAT("* ", @NUM := @NUM + 1)
FROM INFORMATION_SCHEMA.TABLES LIMIT 20;
